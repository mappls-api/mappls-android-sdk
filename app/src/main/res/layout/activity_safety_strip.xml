<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mappls.sdk.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/btn_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/btn_show_strip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_background_btn"
            android:text="Show Strip"
            android:textColor="@color/mappls_demo_white"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_hide_strip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textColor="@color/mappls_demo_white"
            android:background="@drawable/bg_background_btn"
            android:text="Hide Strip"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>