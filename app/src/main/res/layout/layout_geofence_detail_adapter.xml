<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:layout_margin="2dp"
    android:background="@drawable/bg_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_geofence_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geofence Id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sw_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_edit_geofence"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_geofence_label"
        app:srcCompat="@drawable/ic_baseline_edit_24"
        android:layout_marginTop="4dp"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <ImageView
        android:id="@+id/iv_delete_geofence"
        app:layout_constraintLeft_toRightOf="@id/iv_edit_geofence"
        app:layout_constraintTop_toBottomOf="@id/tv_geofence_label"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_width="24dp"
        android:layout_height="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>